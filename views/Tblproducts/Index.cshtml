@model IEnumerable<SalonApp.Models.Tblproduct>

@{
    ViewBag.Title = "Index";
}

<div class="container">
    

    <main>
        <h1 class="sos">Stock</h1>
        <p>
            <h3>@Html.ActionLink("Home", "AdminLogin", "Admin")</h3>
            <h3> @Html.ActionLink("Add Product", "Create")</h3>
        </p>

        <table class="content-table">
            <thead>
                <tr>
                    <th class="pls">
                        @Html.DisplayNameFor(model => model.ProdName)
                    </th>
                    <th class="pls">
                        @Html.DisplayNameFor(model => model.ProdPrice)
                    </th>
                    <th class="pls">
                        @Html.DisplayNameFor(model => model.ProdDescrip)
                    </th>
                    <th class="pls">
                        @Html.DisplayNameFor(model => model.ProdQuantity)
                    </th>
                </tr>
            </thead>

            @foreach (var item in Model)
            {
                <tr>
                    <td class="pls2">
                        @Html.DisplayFor(modelItem => item.ProdName)
                    </td>
                    <td class="pls2">
                        @Html.DisplayFor(modelItem => item.ProdPrice)
                    </td>
                    <td class="pls2">
                        @Html.DisplayFor(modelItem => item.ProdDescrip)
                    </td>
                    <td class="pls2">
                        @Html.DisplayFor(modelItem => item.ProdQuantity)
                    </td>
                    <td class="pls2">
                        <button class="button1">@Html.ActionLink("Edit", "Edit", new { id = item.ProdID }) </button>
                    </td>
                    <td class="pls2">
                        <button class="button2">@Html.ActionLink("Delete", "Delete", new { id = item.ProdID })</button>
                    </td>
                </tr>
            }

        </table>


        <div class="bleh">
            <h4>Ralene's Beauty Salon</h4>
            <h4>&copy;Copyright All rights reserved.</h4>
        </div>
    </main>
</div>



